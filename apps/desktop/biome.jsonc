{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "warn",
      "complexity": {
        "recommended": true,
        "noExcessiveLinesPerFunction": "off",
        "useArrowFunction": "off"
      },
      "correctness": {
        "recommended": true,
        "noNodejsModules": "off",
        "useImportExtensions": "off",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "recommended": true,
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "noProcessEnv": "off",
        "useNodejsImportProtocol": "off",
        "useImportType": "off"
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "off",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "files": {
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
    "ignoreUnknown": true
  }
}
